<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.DjowdaTransport" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Core -->


        <item name="colorPrimary">@color/transport_primary</item>


        <item name="colorSecondary">@color/transport_primary</item>


        <item name="colorBackground">@color/user_background</item>
        <item name="colorSurface">@color/user_card</item>
        <item name="colorNavbar">@color/user_navbar</item>

        <!-- Buttons -->
        <item name="buttonColorPrimary">@color/user_button_primary</item>
        <item name="buttonColorText">@color/user_button_text</item>
        <item name="buttonColorDisabled">@color/user_button_disabled</item>

        <!-- Text -->
        <item name="textColorPrimary">@color/user_text_primary</item>
        <item name="textColorSecondary">@color/user_text_secondary</item>

        <!-- Global -->
        <item name="colorActive">@color/dj_primary</item>
        <item name="colorInactive">@color/dj_gray</item>
        <item name="colorBlack">@color/dj_black</item>
        <item name="colorWhite">@color/dj_white</item>
    </style>

    <style name="Theme.DjowdaTransport" parent="Base.Theme.DjowdaTransport" />

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- Set the splash screen background, animated icon, and animation
        duration. -->
        <item name="windowSplashScreenBackground">@color/ic_launcher_background</item>

        <!-- Use windowSplashScreenAnimatedIcon to add a drawable or an animated
             drawable. One of these is required. -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_screen</item>
        <!-- Required for animated icons. -->
        <!--        <item name="windowSplashScreenAnimationDuration">200</item>-->

        <!-- Set the theme of the Activity that directly follows your splash
        screen. This is required. -->
        <item name="postSplashScreenTheme">@style/Base.Theme.DjowdaTransport</item>
    </style>
</resources>